<div class="row">
  <div class="col s12 m12 l8">
    <h5>Forgot your password?</h5>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: 'form-class'}) do |f| %>
      <%= devise_error_messages! %>

      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">email</i>
          <%= f.email_field :email, autofocus: true, class: 'validate', autocomplete: 'off' %>
          <%= f.label :email %>
        </div>
      </div>

      <button class="btn waves-effect waves-light btn-large" type="submit" name="action">
        Send me reset password instructions
      </button>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>